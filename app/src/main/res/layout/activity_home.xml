<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#080822"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/inria_serif_italic"
        android:text="RecipeApp"
        android:textColor="#4B589F"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inria_serif_italic"
        android:text="app by Josh and Vincent"
        android:textColor="#4B589F"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="296dp"
        android:layout_height="54dp"
        android:layout_marginTop="52dp"
        android:background="#364180"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_button_history" />

    <ImageButton
        android:id="@+id/home_button_history"
        android:layout_width="121dp"
        android:layout_height="58dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toStartOf="@+id/home_button_bookmarks"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/home_button_home"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="?android:attr/listChoiceIndicatorMultiple" />

    <ImageButton
        android:id="@+id/home_button_feelingLucky"
        android:layout_width="145dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_spinner"
        app:srcCompat="@android:drawable/ic_dialog_alert" />

    <ImageButton
        android:id="@+id/home_button_bookmarks"
        android:layout_width="121dp"
        android:layout_height="58dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/home_button_history"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="?android:attr/listChoiceIndicatorMultiple" />

    <ImageButton
        android:id="@+id/home_button_home"
        android:layout_width="121dp"
        android:layout_height="58dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toStartOf="@+id/home_button_history"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="?android:attr/listChoiceIndicatorMultiple" />

    <Button
        android:id="@+id/home_button_search"
        android:layout_width="84dp"
        android:layout_height="52dp"
        android:layout_marginTop="52dp"
        android:text="GO"
        android:textColor="#BAB6B6"
        app:iconTint="#364180"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/searchView"
        app:layout_constraintTop_toBottomOf="@+id/home_button_history" />

    <Spinner
        android:id="@+id/home_spinner"
        android:layout_width="375dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:background="#364180"
        android:dropDownSelector="#1F264C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

</androidx.constraintlayout.widget.ConstraintLayout>